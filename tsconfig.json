{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "allowJs": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client", "vitest/globals", "node"],
    "jsx": "preserve"
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": ["_resources/**/*", ".storybook/**/*", "src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
